{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "command": "emcc",
            "args": [
                "src/test.c",
                "-std=c11",
                // "src/Demo.cpp",
                // "src/Entities.cpp",
                // "src/ResourceManager.cpp",
                // "src/Shader.cpp",
                // "src/SpriteRenderer.cpp",
                // "src/Systems.cpp",
                // "src/Texture2D.cpp",
                // "src/main.cpp",
                // "-std=c++17",
                "-I./include",
                "-O3",
                "-s", "WASM=1",
                "-s", "USE_WEBGL2=1",
                // "-s", "FULL_ES2=1",
                // "-s", "FULL_ES3=1",
                "-s", "USE_SDL=2",
                "-s", "USE_SDL_IMAGE=2",
                "-s", "USE_SDL_MIXER=2",
                "-s", "USE_SDL_TTF=2",
                "-s", "SDL2_IMAGE_FORMATS=\'[\"png\"]\'",
                "-o", "docs/index.html",
                "--preload-file", "assets"
            ],

            "problemMatcher": {
                "owner": "emcc",
                "fileLocation": ["relative", "${workspaceFolder}"],
                "pattern": {
                    "regexp": "^(.*):(\\d+):(\\d+):\\s+(warning|error):\\s+(.*)$",
                    "file": 1,
                    "line": 2,
                    "column": 3,
                    "severity": 4,
                    "message": 5
                }
            },
            "group": {
                "kind": "build",
                "isDefault": true

            },
            "dependsOn":["prebuild"]
        },
        {
            "label": "prebuild",
            "type": "shell",
            "command": "${workspaceFolder}/prebuild",
            "args": [ "${workspaceFolder}" ],
            "group": "build"
        }
    ]
}
